<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Application theme for dark theme. -->
    <style name="Theme.MumbaiInsider" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/yellow_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_500</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleFontStyle">
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="textLabelGrey" parent="Theme.MumbaiInsider">
        <item name="android:textColor">?colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

</resources>